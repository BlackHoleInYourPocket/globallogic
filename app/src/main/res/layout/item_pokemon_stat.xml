<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="item"
            type="com.scz.globallogic.domain.uimodel.StatListItemUI" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_no_radius"
        android:divider="@color/black"
        android:orientation="horizontal"
        android:padding="4dp"
        android:showDividers="middle">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvStatName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@{item.stat.name}" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvBaseStat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@{item.baseStat}" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvEffort"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@{item.effort}" />

    </LinearLayout>
</layout>